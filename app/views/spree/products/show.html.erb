<% cache [I18n.locale, current_currency, @product] do %>
  <div data-hook="product_show" itemscope itemtype="http://schema.org/Product">
    <% @body_id = 'product-details' %>

				<% landscape = false	%>
	    <% @product.taxons.each do |t| %>
				<% if t.name == "Bird" %>
	    		<% landscape = true %>
	    	<% end %>
	    <% end %>


	    <% if landscape %>

    <div class="columns ten alpha" data-hook="product_left_part">
      <div class="row" data-hook="product_left_part_wrap">

			<div id="product-images" data-hook="product_images">
				<div id="main-image" data-hook>
					<%= render :partial => 'landscape_image' %>
				</div>
				<div id="thumbnails" data-hook>
					<%= render :partial => 'landscape_thumbnails' %>
				</div>
			</div>

	    <% else %>

    <div class="columns eight alpha" data-hook="product_left_part">
      <div class="row" data-hook="product_left_part_wrap">

			<div id="product-images" data-hook="product_images">
				<div id="main-image" data-hook>
					<%= render :partial => 'portrait_image' %>
				</div>
				<div id="thumbnails" data-hook>
					<%= render :partial => 'portrait_thumbnails' %>
				</div>
			</div>

	    <% end %>

        <div data-hook="product_properties">
          <%= render :partial => 'properties' %>
        </div>

        <div data-hook="promotions">
          <%= render :partial => 'promotions' %>
        </div>

      </div>
    </div>

		<% if landscape %>
    <div class="columns six omega" data-hook="product_right_part">
		<% else %>
    <div class="columns eight omega" data-hook="product_right_part">
		<% end %>
			
      <div class="row" data-hook="product_right_part_wrap">

        <div id="product-description" data-hook="product_description">

          <h1 class="product-title" itemprop="name"><%= accurate_title %></h1>

          <div itemprop="description" data-hook="description">
            <%= product_description(@product) rescue Spree.t(:product_has_no_description) %>
          </div>

          <div id="cart-form" data-hook="cart_form">
            <%= render :partial => 'cart_form' %>
          </div>

        </div>

        <%= render :partial => 'taxons' %>

      </div>
    </div>

  </div>
<% end %>
