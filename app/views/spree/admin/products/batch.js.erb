// Gets fired when the page gets ajax loaded
// It renders the batch template in the content area for the products page and hides whatever was there before.

$("#new_product_wrapper").html('<%= escape_javascript(render :template => "spree/admin/products/batch", :formats => [:html], :handlers => [:erb]) %>');
handle_date_picker_fields();
